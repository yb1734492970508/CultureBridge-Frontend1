# 开发环境配置
VITE_APP_NAME=CultureBridge
VITE_APP_VERSION=3.0.0
VITE_APP_ENVIRONMENT=development

# API配置
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket配置
VITE_SOCKET_URL=http://localhost:5000
VITE_SOCKET_TIMEOUT=5000
VITE_SOCKET_RECONNECT_ATTEMPTS=5

# 区块链配置
VITE_BLOCKCHAIN_NETWORK=testnet
VITE_CBT_CONTRACT_ADDRESS=0x742d35Cc6634C0532925a3b8D4C2F8b4C4b4b4b4
VITE_BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
VITE_BSC_CHAIN_ID=97

# 语音翻译配置
VITE_SPEECH_API_ENABLED=true
VITE_SUPPORTED_LANGUAGES=en,zh,ja,ko,es,fr,de,it,pt,ru

# 功能开关
VITE_FEATURE_VOICE_CHAT=true
VITE_FEATURE_BLOCKCHAIN=true
VITE_FEATURE_REAL_TIME_TRANSLATION=true
VITE_FEATURE_CULTURAL_CONTENT=true
VITE_FEATURE_GAMIFICATION=true

# 性能配置
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# 安全配置
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=false
VITE_SESSION_TIMEOUT=3600000

# UI配置
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION=300

